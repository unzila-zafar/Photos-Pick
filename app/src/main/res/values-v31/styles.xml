<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="fontPath">assets/Roboto-Bold.ttf</item>-->
<!--        <item name="android:windowSplashScreenBackground">@color/white</item>-->
<!--        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>-->
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_launcher_foreground</item>-->
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:ambientShadowAlpha">0.07</item>
        <item name="android:spotShadowAlpha">0.07</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="textInputStyle">@style/LoginTextInputLayoutStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarHeaderSelection">
            @style/Widget.MaterialComponents.MaterialCalendar.HeaderSelection
        </item>
        <item name="materialCalendarFullscreenTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen
        </item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
        </item>

    </style>
</resources>