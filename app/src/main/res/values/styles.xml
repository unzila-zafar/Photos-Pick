<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="fontPath">assets/Roboto-Bold.ttf</item>-->
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:ambientShadowAlpha">0.07</item>
        <item name="android:spotShadowAlpha">0.07</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="textInputStyle">@style/LoginTextInputLayoutStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarHeaderSelection">@style/Widget.MaterialComponents.MaterialCalendar.HeaderSelection</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.App.MaterialCalendar" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="textInputStyle">@style/LoginTextInputLayoutStyle</item>
<!--        <item name="color_checked">@color/colorPrimary</item>-->
        <item name="android:headerBackground">@color/colorAccent</item>
    </style>



    <style name="RangeDatePickerTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">


    </style>
    <style name="GridLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="endIconMode">custom</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="prefix" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="CustomPopUpStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:itemBackground">@drawable/popup_item_drawable</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="CustomPopUpStyleWithIcon" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:itemBackground">@drawable/popup_item_drawable</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="icon">@drawable/circle_bg</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowFixedWidthMajor">90%</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/lightgray</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--=============Rounded Corner Bottom sheet============= -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>
    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>
    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!--=============Insurance Bazaar Style============= -->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="endIconMode">custom</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="passwordStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="endIconTint">@color/colorAccent</item>
        <item name="endIconMode">password_toggle</item>
        <item name="passwordToggleTint">@color/colorAccent</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleContentDescription">some description</item>
        <item name="passwordToggleTintMode">src_atop</item>
        <item name="endIconTintMode">src_atop</item>
    </style>



    <style name="RegularText">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/opacity3_grey</item>
<!--        <item name="mt_searchIconTint">@color/opacity3_grey</item>-->
        <!--        <item name="android:textAlignment">center</item>-->
    </style>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>



    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="PDFviewTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
    </style>

<!--    <style name="TextLabel" parent="TextAppearance.Design.Hint">-->
<!--        <item name="android:textSize">@dimen/_14ssp</item>-->
<!--        <item name="hintTextColor">#E988A2</item>-->
<!--    </style>-->

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>

    </style>

    <style name="TextSmall" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <style name="TextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <style name="TextLarge" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>




</resources>
